<!doctype html>
<html lang='ko'>
    <head>
        <meta charset='utf-8'>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
        <title>아카라이브</title>
    </head>
<body class="bg-black">
    <form action="/edit_profile_proc" method="post">
        <div class="position-absolute top-50 start-50 translate-middle text-light">
            <div style="width: 500px; height: 380px;" class="bg-dark rounded-4">
                <br>
                <h2 class="text-light text-center">Edit Profile</h2>
                <br>
                <div class="row">
                    <div class="col-sm-1"></div>
                    <div class="col">
                        <div class="form-floating mb-3">
                            <input type="text" class="form-control bg-dark text-light" id="floatingInput" placeholder="I.D" name="new_id" oninput="checkForm()">
                            <label for="floatingInput">I.D</label>
                        </div>

                        <div class="form-floating mb-3">
                            <input type="email" class="form-control bg-dark text-light" id="floatingEmail" placeholder="E-mail" name="new_email" oninput="checkForm()">
                            <label for="floatingInput">E-mail</label>
                        </div>

                        <div class="form-floating mb-3">
                            <input type="password" class="form-control bg-dark text-light" id="floatingPassword" placeholder="P.W" name="new_pw" oninput="checkForm()">
                            <label for="floatingInput">P.W</label>
                        </div>
                    </div>
                    <div class="col-sm-1"></div>
                </div>
                <div class="row">
                    <div class="col-sm-1"></div>
                    <div class="row col">
                        <div class="col">
                            <nav aria-label="breadcrumb">
                                <ol class="breadcrumb">
                                    <li class="breadcrumb-item" style="padding-top: 5px; cursor: pointer;" onclick="location.href = '/'">메인</li>
                                </ol>
                            </nav>
                        </div>
                        <div class="col">
                            <button type="submit" class="btn btn-primary float-end" id="editButton" disabled>수정</button>
                        </div>
                    </div>
                    <div class="col-sm-1"></div>
                </div>
            </div>
        </div>
    </form>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
    <script>
        function checkForm() {
            var username = document.getElementById('floatingInput').value;
            var password = document.getElementById('floatingPassword').value;
            var email = document.getElementById('floatingEmail').value;

            var registerButton = document.getElementById('registerButton');
            editButton.disabled = !(username && password && email);
        }
    </script>
</body>
</html>